{
  "name": "pray4ukraine",
	"displayName": "Pray for Ukraine",
	"description": "Display a message in the status bar to express your support for the people in Ukraine.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"icon": "images/pray4ukraine-icon.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Pray for Ukraine",
			"properties": {
				"pray4ukraine.message": {
					"type": "string",
					"default": "Pray for Ukraine",
					"description": "Set a message to display in the status bar."
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ikasashi014/vscode-pray4ukraine.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.2"
	}
}
